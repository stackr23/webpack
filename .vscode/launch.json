  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "karma-runner",
      "request": "launch",
      "args": ["start", "./src/test/karma.config.js", "./src/test/karma.config.js"],
      "env": { "WEBPACK_PATH": "test" },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "program": "${workspaceFolder}/node_modules/karma/bin/karma"
    }
  ]
}
